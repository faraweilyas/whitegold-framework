    "autoload": {
    	"psr-4": {
    		"Blaze\\": "src"
    	},
        "files": [
            "src/Bootstrap/Helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0.0",
        "phpmailer/phpmailer": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
	"scripts": {
		"tests": "phpunit"
	},
    "config": {
        "optimize-autoloader": true
    }
}
